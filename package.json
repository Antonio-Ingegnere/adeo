{
  "name": "adeo",
  "productName": "Adeo",
  "version": "0.1.0",
  "description": "Adeo todo app",
  "main": "dist/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc -p tsconfig.renderer.json && mkdir -p dist/assets dist/server && cp index.html dist/index.html && cp styles.css dist/styles.css && cp assets/icon.png dist/assets/icon.png && cp -R server dist/server",
    "api": "python3 server/app.py",
    "prestart": "bash -lc 'PY=.venv/bin/python; if [ -x \"$PY\" ]; then $PY -c \"import fastapi\"; else python3 -c \"import fastapi\"; fi'",
    "start": "npm run build && electron .",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win --x64",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.adeo.app",
    "productName": "Adeo",
    "directories": {
      "output": "release"
    },
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "^5.6.3"
  },
  "license": "MIT",
  "dependencies": {}
}
